{#
 * Composant partialisé pour afficher les flash messages.
 * Usage : {% include 'components/_flash_messages.html.twig' %}
 *
 * Types supportés : success, danger, warning, info
 #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        {% set alertClass =
            label == 'success' ? 'dc-alert--success' :
            (label == 'danger'  ? 'dc-alert--danger'  :
            (label == 'warning' ? 'dc-alert--warning'  : 'dc-alert--info'))
        %}
        {% set iconClass =
            label == 'success' ? 'fa-circle-check' :
            (label == 'danger'  ? 'fa-triangle-exclamation' :
            (label == 'warning' ? 'fa-triangle-exclamation' : 'fa-circle-info'))
        %}
        <div class="dc-alert {{ alertClass }}" role="alert">
            <i class="fa-solid {{ iconClass }}" aria-hidden="true"></i>
            <span>{{ message }}</span>
        </div>
    {% endfor %}
{% endfor %}
