{% extends 'espace.html.twig' %}

{% block title %}Modifier document{% endblock %}

{% block body %}
<div class="mb-4 d-flex justify-content-between align-items-center flex-wrap gap-2">
    <div>
        <h1 class="mb-1">Modifier le document</h1>
        <p class="text-muted small mb-0">
            Mettez à jour le nom ou remplacez le fichier déposé.
        </p>
    </div>
    <a href="{{ path('app_mes_documents') }}" class="dc-btn dc-btn--outline">
        <i class="fa-solid fa-arrow-left"></i>
        Retour à la liste
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <div class="dc-card">
            <div class="dc-card__head d-flex justify-content-between align-items-center">
                <span class="dc-card__title">
                    <i class="fa-solid fa-file-pen"></i>
                    Édition du document
                </span>
                <span class="dc-table__muted small">
                    Fichier actuel : <strong>{{ document.fichier }}</strong>
                </span>
            </div>
            <div class="dc-card__body">
                {{ include('utilisateur/document/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
