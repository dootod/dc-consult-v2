{% extends 'espace.html.twig' %}

{% block title %}Mes documents{% endblock %}

{% block body %}

<div class="mb-4 d-flex justify-content-between align-items-center flex-wrap gap-2">
    <div>
        <h1 class="mb-1">Mes documents</h1>
        <p class="text-muted small mb-0">
            Consultez, ajoutez et mettez à jour les documents associés à votre compte.
        </p>
    </div>
    <a href="{{ path('app_new_mes_documents') }}" class="dc-btn dc-btn--primary">
        <i class="fa-solid fa-file-circle-plus"></i>
        Ajouter un nouveau document
    </a>
</div>

{% for label, messages in app.flashes(['success', 'warning', 'danger']) %}
    {% for message in messages %}
        {% set alertClass =
            label == 'success' ? 'dc-alert--success' :
            (label == 'danger' ? 'dc-alert--danger' : 'dc-alert--info')
        %}
        {% set iconClass =
            label == 'success' ? 'fa-circle-check' :
            (label == 'danger' ? 'fa-triangle-exclamation' : 'fa-info-circle')
        %}
        <div class="dc-alert {{ alertClass }}">
            <i class="fa-solid {{ iconClass }}"></i>
            <span>{{ message }}</span>
        </div>
    {% endfor %}
{% endfor %}

<div class="mb-4">
    <div class="dc-card">
        <div class="dc-card__head">
            <span class="dc-card__title">
                <i class="fa-solid fa-folder-open"></i>
                Mes documents déposés
            </span>
        </div>
        <div class="dc-card__body">
            {% if documents is empty %}
                <div class="dc-empty-state">
                    <i class="fa-solid fa-file-circle-question"></i>
                    <p>Vous n'avez pas encore déposé de document.</p>
                    <a href="{{ path('app_new_mes_documents') }}" class="dc-btn dc-btn--primary">
                        <i class="fa-solid fa-file-circle-plus"></i>
                        Déposer mon premier document
                    </a>
                </div>
            {% else %}
                <div class="dc-table-wrap">
                    <div class="table-responsive">
                        <table class="dc-table">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th class="d-none d-md-table-cell">Fichier</th>
                                <th>Date d'ajout</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for document in documents %}
                                <tr>
                                    <td>
                                        <strong>{{ document.nom }}</strong><br>
                                        <span class="dc-table__muted small">
                                            {{ document.fichier }}
                                        </span>
                                    </td>
                                    <td class="d-none d-md-table-cell dc-table__muted">
                                        {{ document.fichier }}
                                    </td>
                                    <td class="dc-table__muted">
                                        {{ document.date ? document.date|date('d/m/Y à H:i') : '' }}
                                    </td>
                                    <td>
                                        <div class="d-flex flex-wrap gap-2">
                                            <a href="{{ path('app_show_mes_documents', {'id': document.id}) }}"
                                               class="dc-btn dc-btn--outline dc-btn--sm">
                                                <i class="fa-solid fa-eye"></i>
                                                Voir
                                            </a>
                                            <a href="{{ path('app_edit_mes_documents', {'id': document.id}) }}"
                                               class="dc-btn dc-btn--outline dc-btn--sm">
                                                <i class="fa-solid fa-pen"></i>
                                                Modifier
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% if documentsAdmin is not empty %}
    <div class="dc-card">
        <div class="dc-card__head">
            <span class="dc-card__title">
                <i class="fa-solid fa-paperclip"></i>
                Documents mis à disposition par l'administration
            </span>
        </div>
        <div class="dc-card__body">
            <div class="dc-table-wrap">
                <div class="table-responsive">
                    <table class="dc-table">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Date de mise à disposition</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for doc in documentsAdmin %}
                            <tr>
                                <td>{{ doc.nom }}</td>
                                <td class="dc-table__muted">
                                    {{ doc.deposeLe|date('d/m/Y à H:i') }}
                                </td>
                                <td>
                                    <a href="{{ asset('uploads/documents/' ~ doc.fichier) }}"
                                       target="_blank"
                                       class="dc-btn dc-btn--outline dc-btn--sm">
                                        <i class="fa-solid fa-download"></i>
                                        Télécharger / Ouvrir
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endif %}

{% endblock %}
