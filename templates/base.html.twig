<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DC Consult - {% block title %}{% endblock %}</title>

    <link rel="icon" type="image/png" href="{{ asset('images/favicon.png') }}">

    {# Bootstrap 5 #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    {# Font Awesome 6 #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    {% block stylesheets %}{% endblock %}
</head>

<body>

<nav class="dc-navbar navbar navbar-expand-lg fixed-top" id="mainNavbar">
    <div class="container">

        <a href="{{ path('app_home') }}" class="dc-navbar__brand navbar-brand">
            <img src="{{ asset('images/logo.png') }}" alt="DC Consult" class="dc-navbar__logo">
        </a>

        <button class="dc-navbar__menu-toggle"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarContent"
                aria-controls="navbarContent"
                aria-expanded="false"
                aria-label="Ouvrir le menu"
                id="navbarToggler">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">

            <ul class="navbar-nav mx-auto align-items-lg-center gap-lg-1">
                <li class="nav-item">
                    <a href="{{ path('app_home') }}"
                       class="dc-navbar__link {% if app.request.attributes.get('_route') == 'app_home' %}is-active{% endif %}">
                        Accueil
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_projets') }}"
                       class="dc-navbar__link {% if app.request.attributes.get('_route') == 'app_projets' %}is-active{% endif %}">
                        Projets
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_clients') }}"
                       class="dc-navbar__link {% if app.request.attributes.get('_route') == 'app_clients' %}is-active{% endif %}">
                        Clients
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_logiciels') }}"
                       class="dc-navbar__link {% if app.request.attributes.get('_route') == 'app_logiciels' %}is-active{% endif %}">
                        Logiciels
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_contact') }}"
                       class="dc-navbar__link {% if app.request.attributes.get('_route') == 'app_contact' %}is-active{% endif %}">
                        Contact
                    </a>
                </li>
            </ul>

            <div class="d-flex align-items-center gap-2 mt-3 mt-lg-0">
                {% if app.user %}
                    <div class="dc-navbar__user">
                        <span class="dc-navbar__user-avatar">
                            <i class="fa-solid fa-user"></i>
                        </span>
                        <span class="dc-navbar__user-name">
                            {{ app.user.prenom ?? app.user.userIdentifier }}
                        </span>
                    </div>

                    <span class="dc-navbar__divider d-none d-lg-block"></span>

                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_dashboard_admin') }}"
                           class="dc-navbar__link {% if app.request.attributes.get('_route') starts with 'app_dashboard_admin' %}is-active{% endif %}">
                            <i class="fa-solid fa-gauge-high fa-sm me-1"></i>Admin
                        </a>
                    {% else %}
                        <a href="{{ path('app_dashboard') }}"
                           class="dc-navbar__link {% if app.request.attributes.get('_route') starts with 'app_dashboard' %}is-active{% endif %}">
                            <i class="fa-solid fa-gauge fa-sm me-1"></i>Mon espace
                        </a>
                    {% endif %}

                    <a href="{{ logout_path() }}" class="dc-navbar__btn-logout">
                        <i class="fa-solid fa-arrow-right-from-bracket fa-sm"></i>
                        <span class="d-none d-lg-inline">Déconnexion</span>
                    </a>
                {% else %}
                    <a href="{{ path('app_connexion') }}" class="dc-navbar__btn-login">
                        <i class="fa-solid fa-lock fa-sm"></i>
                        Se connecter
                    </a>
                {% endif %}
            </div>

        </div>
    </div>
</nav>

{% block body %}{% endblock %}

{# Bootstrap JS #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

{# AssetMapper — charge app.js et app.css automatiquement #}
{{ importmap('app') }}

{% block javascripts %}{% endblock %}

</body>
</html>
