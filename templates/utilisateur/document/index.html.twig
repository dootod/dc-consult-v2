{% extends 'espace.html.twig' %}

{% block title %}Mes documents{% endblock %}

{% block body %}

    {% for label, messages in app.flashes(['success', 'warning', 'danger']) %}
        {% for message in messages %}
            <div>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h1>Mes documents</h1>

    <a href="{{ path('app_new_mes_documents') }}">Ajouter un nouveau document</a>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Fichier</th>
                <th>Date d'ajout</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.nom }}</td>
                <td>{{ document.fichier }}</td>
                <td>{{ document.date ? document.date|date('d/m/Y Ã  H:i') : '' }}</td>
                <td>
                    <a href="{{ path('app_show_mes_documents', {'id': document.id}) }}">Voir</a>
                    <a href="{{ path('app_edit_mes_documents', {'id': document.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>Vous n'avez pas encore de document.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
