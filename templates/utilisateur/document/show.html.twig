{% extends 'espace.html.twig' %}

{% block title %}{{ document.nom }}{% endblock %}

{% block body %}
    <h1>{{ document.nom }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ document.nom }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>
                    <a href="{{ asset('uploads/documents/' ~ document.fichier) }}" target="_blank">
                        Télécharger / Ouvrir
                    </a>
                </td>
            </tr>
            <tr>
                <th>Date d'ajout</th>
                <td>{{ document.date ? document.date|date('d/m/Y à H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('utilisateur/document/_delete_form.html.twig') }}

    <a href="{{ path('app_edit_mes_documents', {'id': document.id}) }}">Modifier le document</a>
    <a href="{{ path('app_mes_documents') }}">Retour</a>
{% endblock %}
