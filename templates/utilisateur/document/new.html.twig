{% extends 'espace.html.twig' %}

{% block title %}Nouveau document{% endblock %}

{% block body %}
<div class="mb-4 d-flex justify-content-between align-items-center flex-wrap gap-2">
    <div>
        <h1 class="mb-1">Nouveau document</h1>
        <p class="text-muted small mb-0">
            Déposez un nouveau document pour qu'il soit associé à votre compte.
        </p>
    </div>
    <a href="{{ path('app_mes_documents') }}" class="dc-btn dc-btn--outline">
        <i class="fa-solid fa-arrow-left"></i>
        Retour à la liste
    </a>
</div>

{% include 'components/_flash_messages.html.twig' %}

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <div class="dc-card">
            <div class="dc-card__head">
                <span class="dc-card__title">
                    <i class="fa-solid fa-file-circle-plus"></i>
                    Informations du document
                </span>
            </div>
            <div class="dc-card__body">
                {{ include('utilisateur/document/_form.html.twig', {'button_label': 'Ajouter'}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
