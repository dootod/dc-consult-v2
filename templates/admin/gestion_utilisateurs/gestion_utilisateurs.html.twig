{% extends 'espace.html.twig' %}

{% block title %}Gestion utilisateurs{% endblock %}

{% block body %}

{% for label, messages in app.flashes(['success', 'warning']) %}
    {% for message in messages %}
        <div>
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<h1>Gestion utilisateurs</h1>

<a href="{{ path('app_new_gestion_utilisateurs') }}">Ajouter un nouveau utilisateur</a>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Email</th>
            <th>RÃ´le</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.id }}</td>
                <td>{{ utilisateur.nom }}</td>
                <td>{{ utilisateur.prenom }}</td>
                <td>{{ utilisateur.email }}</td>
                <td>{{ utilisateur.mainRole }}</td>
                <td>
                    <a href="{{ path('app_show_gestion_utilisateurs', {'id': utilisateur.id}) }}">
                        Voir
                    </a>
                    <a href="{{ path('app_edit_gestion_utilisateurs', {'id': utilisateur.id}) }}">
                        Modifier
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
