{% extends 'espace.html.twig' %}

{% block title %}{{ document.nom }}{% endblock %}

{% block body %}
    <h1>{{ document.nom }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ document.date ? document.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>{{ document.fichier }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ document.nom }}</td>
            </tr>
        </tbody>
    </table>
    
    {{ include('utilisateur/document/_delete_form.html.twig') }}

    <a href="{{ path('app_edit_mes_documents', {'id': document.id}) }}">Modifier le document</a>
    <a href="{{ path('app_mes_documents') }}">Retour</a>

{% endblock %}
